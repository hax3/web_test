doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/topic') Server Side JavaScript
        ul
            each topic in topics
                li
                    - _id = encodeURIComponent(topic._id)
                    a(href='/topic/' + _id)= topic.title
        article
            if topic
                h2= topic.title
                = topic.description
                div= 'by '+topic.author
            else
                h2 Welcome
                | This is server side javascript tutorial.
        ul
            li
                a(href='/topic/add') add
            if topic
                - _id = encodeURIComponent(topic._id)
                li
                    a(href='/topic/'+_id+'/edit') edit
                li
                    a(href='/topic/' + _id + '/delete') delete



